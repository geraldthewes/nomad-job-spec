# Environment variable configuration for Nomad deployment
# Format: type:VAR_NAME=value
#
# Types:
#   env:   Fixed value set in job spec
#   vault: Secret from HashiCorp Vault (format: path:field)
#   nomad: Dynamic port assigned by Nomad

# Fixed values
env:LOG_LEVEL=info
env:REDIS_URL=redis://redis.service.consul:6379/0

# Vault secrets
vault:DATABASE_URL=secret/data/flask-api/db:connection_string
vault:SECRET_KEY=secret/data/flask-api/app:secret_key

# Nomad dynamic port
nomad:APP_PORT=assigned
